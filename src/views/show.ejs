

<%- include('partials/header', { pageTitle: post.title }) %>
<%- include('partials/hero') %>

<main class="container px-4 px-lg-5">
  <% if (typeof success !== 'undefined' && success) { %>
    <p class="flash success"><%= success %></p>
  <% } %>

  <article class="mt-5">
    <h2 class="mb-2"><%= post.title %></h2>
    <p>
      <small>
        por <%= post.author || 'Anônimo' %> — <%= formatDate(post.createdAt) %>
        <% if (post.updatedAt && post.updatedAt !== post.createdAt) { %>
          • atualizado: <%= formatDate(post.updatedAt) %>
        <% } %>
      </small>
    </p>

    <div><%- post.content %></div>

    <div class="mt-4 d-flex flex-wrap gap-2">
      <a href="/" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
      </a>
    
      <a href="/posts/<%= post.id %>/edit" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Editar
      </a>
    
      <form action="/posts/<%= post.id %>/delete" method="POST" onsubmit="return confirm('Excluir este post?')">
        <button type="submit" class="btn btn-danger">
          <i class="bi bi-trash"></i> Excluir
        </button>
      </form>
      </div>
  </article>
</main>

<%- include('partials/footer') %>
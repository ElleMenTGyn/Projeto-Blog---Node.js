<%- include('partials/header', { pageTitle: 'Editar: ' + post.title }) %>
  <%- include('partials/hero') %>

    <main class="container px-4 px-lg-5">
      <h2 class="mt-5">Editar Post</h2>

      <% if (typeof errors !=='undefined' && errors.length) { %>
        <ul class="errors">
          <% errors.forEach(e=> { %><li>
              <%= e %>
            </li>
            <% }) %>
        </ul>
        <% } %>

        
        <form action="/posts/<%= post.id %>/update" method="POST" class="vstack gap-3">
          
          <input id="author" name="author" class="form-control" value="<%= post.author || '' %>">
          <input id="title"  name="title"  class="form-control" value="<%= post.title  || '' %>">
          <textarea id="content" name="content" rows="8" class="form-control"><%= post.content || '' %></textarea>
          <div class="d-flex gap-2">
            <a href="/posts/<%= post.id %>" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Voltar</a>
            <button type="submit" class="btn btn-primary ms-auto"><i class="bi bi-check2-circle"></i> Salvar</button>
          </div>
        </form>

          <p class="mt-3"><a href="/posts/<%= post.id %>">Voltar ao post</a></p>
    </main>

    <%- include('partials/footer') %>